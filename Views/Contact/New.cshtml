<body>
<div class="address py-0" id="contact">
		<div class="container py-xl-5 py-lg-3">
			<div class="title text-center mb-5">
				<h3 class="mb-2">Contact</h3>
				<p>Hello</p>
			</div>
			<div class="row address-row">
				<div class="col-lg-6 address-right">
					<div class="address-info wow fadeInRight animated" data-wow-delay=".5s">
						<h4 class="mb-3">Address</h4>
						<p> Nepal.</p>
					</div>
					<div class="address-info address-mdl wow fadeInRight animated" data-wow-delay=".7s">
						<h4 class="mb-3">Phone </h4>
						<p>9814913728</p>
						
					</div>
					<div class="address-info agileits-info wow fadeInRight animated" data-wow-delay=".6s">
						<h4 class="mb-3">Mail</h4>
						<p>
							<a href="mailto:example@mail.com"> gaurav.ga6@gmail.com</a>
						</p>
						<p>
							<a href="mailto:example@mail.com"> Theblog001@gmail@example.com</a>
						</p>
					</div>
				</div>
				<div class="col-lg-6 address-left mt-lg-0 mt-5">
					<div class="address-grid">
						<h4 class="mb-3">Get In Touch</h4>
						<form asp-action="AddContact" asp-controller="Contact" method="POST" >
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Name" asp-for="Name" required="">
							</div>
							<div class="form-group">
								<input type="email" class="form-control" placeholder="Email" asp-for="Email" required="">
							</div>
							<div class="form-group">
								<input type="text" class="form-control" placeholder="Subject" asp-for="Subject" required="">
							</div>
							<div class="form-group">
								<textarea placeholder="Message" class="form-control" asp-for="Message" required=""></textarea>
							</div>
							<input type="submit" value="SEND">
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
